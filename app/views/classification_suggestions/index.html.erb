<div class="container mt-5 py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <div>
      <h1 class="display-5 mb-0">Sugest√µes pendentes</h1>
      <p class="text-muted mb-0">Revise e aplique categorias sugeridas automaticamente.</p>
    </div>

    <span class="badge bg-secondary fs-6">
      <%= @suggestions.size %> pendente<%= @suggestions.size == 1 ? "" : "s" %>
    </span>
  </div>

  <% if @suggestions.empty? %>
    <div class="text-center mt-5 py-5">
      <h3 class="mb-2">üéâ Nenhuma sugest√£o pendente</h3>
      <p class="text-muted">
        Conforme voc√™ usa o app, eu vou aprendendo seus padr√µes automaticamente.
      </p>
    </div>
  <% end %>

  <div class="row g-3">
    <% @suggestions.each do |s| %>
      <% t = s.financial_transaction %>

      <div class="col-12 col-lg-8">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <h5 class="card-title mb-1"><%= t.description %></h5>
                <div class="text-muted small">
                  <span class="me-3"><b>Data:</b> <%= l(t.date) rescue t.date %></span>
                  <span><b>Valor:</b> <%= number_to_currency(t.value) rescue t.value %></span>
                </div>
              </div>

              <span class="badge bg-info text-dark">
                <%= s.source %>
              </span>
            </div>

            <hr>

            <div class="row">
              <div class="col-md-8">
                <div class="mb-1 text-muted small">Categoria sugerida</div>
                <div class="fs-5">
                  <%= s.suggested_category&.name || "-" %>
                </div>
                <% if s.source == "alias" %>
                  <div class="text-muted small mt-1">
                    Aprendido a partir de corre√ß√µes anteriores
                  </div>
                <% end %>
              </div>

              <div class="col-md-4 text-md-end">
                <div class="mb-1 text-muted small">Confian√ßa</div>
                <% confidence_percent = (s.confidence.to_f * 100).round %>
                <% bar_class =
                  if confidence_percent >= 80
                    "bg-success"
                  elsif confidence_percent >= 60
                    "bg-warning"
                  else
                    "bg-danger"
                end %>
                <div class="fw-bold"><%= confidence_percent %>%</div>
                <div class="progress mt-2" style="height: 8px;">
                  <div class="progress-bar <%= bar_class %>" role="progressbar" style="width: <%= confidence_percent %>%"></div>
                </div>
              </div>
            </div>

            <div class="d-flex gap-2 mt-3">
              <%= button_to "Aceitar", accept_classification_suggestion_path(s), method: :post, class: "btn btn-primary" %>

              <button type="button" class="btn btn-outline-secondary" data-action="toggle-correction" data-target="correction-<%= s.id %>">
                Recusar
              </button>

              <%= button_to "Recusar (sem corrigir)", reject_classification_suggestion_path(s), method: :post, class: "btn btn-outline-danger" %>
            </div>

            <div id="correction-<%= s.id %>" class="mt-3 d-none">
              <div class="card border-0 bg-light">
                <div class="card-body">
                  <%= form_with url: correct_classification_suggestion_path(s), method: :post, scope: :classification_suggestion, local: true do |f| %>

                    <div class="row g-2 align-items-end">
                      <div class="col-md-8">
                        <%= f.label :category_id, "Categoria correta", class: "form-label" %>
                        <%= f.collection_select :category_id, Category.order(:name), :id, :name, { prompt: "Selecione..." }, class: "form-select" %>
                      </div>

                      <div class="col-md-4">
                        <%= f.submit "Aplicar corre√ß√£o", class: "btn btn-outline-primary w-100" %>
                      </div>
                    </div>

                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
