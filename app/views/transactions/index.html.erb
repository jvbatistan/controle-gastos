<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Transações - <%= number_to_currency(@total_sum.to_f, unit: "R$ ", separator: ",", delimiter: ".") if @total_sum.present? %></h3>
    <%= link_to "+ Cadastrar transação", new_transaction_path, class: "btn btn-primary" %>
  </div>

  <%= form_with url: transactions_path, method: :get, local: true, class: "row g-2 align-items-end mb-3" do %>
    <div class="col-12 col-md-4">
      <label class="form-label mb-1">Cartão</label>
      <%= select_tag :card_id, options_from_collection_for_select(@cards, :id, :name, params[:card_id]), include_blank: "Todos", class: "form-select" %>
    </div>

    <div class="col-6 col-md-2">
      <label class="form-label mb-1">Mês</label>
      <%= select_tag :month, options_for_select((1..12).map { |m| [m.to_s.rjust(2, "0"), m] }, params[:month]), include_blank: "Todos", class: "form-select" %>
    </div>

    <div class="col-6 col-md-2">
      <label class="form-label mb-1">Ano</label>
      <%= select_tag :year, options_for_select((2023..(Date.today.year + 1)).to_a.reverse, params[:year]), include_blank: "Todos", class: "form-select" %>
    </div>

    <div class="col-12 col-md-4 d-flex gap-2">
      <%= submit_tag "Filtrar", class: "btn btn-primary" %>
      <%= link_to "Limpar", transactions_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped align-middle">
      <thead>
        <tr>
          <th>#</th>
          <th>Descrição</th>
          <th>Valor</th>
          <th>Cartão</th>
          <th>Data</th>
          <th>Pago</th>
          <th class="text-center">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% if @transactions.any? %>
          <% @transactions.each do |t| %>
            <tr>
              <td><%= t.id %></td>
              <td><%= t.description %> <%= t.installment_label %></td>
              <td><%= number_to_currency(t.value.to_f, unit: "R$ ", separator: ",", delimiter: ".") %></td>
              <td><%= t.card&.name %></td>
              <td><%= l(t.date) if t.date %></td>
              <td>
                <% if t.paid %>
                  <span class="badge bg-success">Sim</span>
                <% else %>
                  <span class="badge bg-secondary">Não</span>
                <% end %>
              </td>
              <td class="text-center">
                <%= link_to "Editar", edit_transaction_path(t), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Excluir", transaction_path(t), method: :delete, data: { confirm: "Tem certeza que deseja excluir esta transação?" }, class: "btn btn-sm btn-outline-danger ms-1" %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="text-center text-muted py-4">
              Nenhuma transação cadastrada ainda.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
