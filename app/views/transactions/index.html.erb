<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Transações</h3>
    <%= link_to "+ Cadastrar transação", new_transaction_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped align-middle">
      <thead>
        <tr>
          <th>#</th>
          <th>Descrição</th>
          <th>Valor</th>
          <th>Cartão</th>
          <th>Data</th>
          <th>Pago</th>
        </tr>
      </thead>
      <tbody>
        <% if @transactions.any? %>
          <% @transactions.each do |t| %>
            <tr>
              <td><%= t.id %></td>
              <td><%= t.description %> <%= t.installment_label %></td>
              <td><%= number_to_currency(t.value.to_f, unit: "R$ ", separator: ",", delimiter: ".") %></td>
              <td><%= t.card&.name %></td>
              <td><%= l(t.date) if t.date %></td>
              <td>
                <% if t.paid %>
                  <span class="badge bg-success">Sim</span>
                <% else %>
                  <span class="badge bg-secondary">Não</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="text-center text-muted py-4">
              Nenhuma transação cadastrada ainda.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
