<%= form_with(model: @merchant_alias, local: true) do |f| %>
  <% if @merchant_alias.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @merchant_alias.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :normalized_merchant, "Comerciante (normalizado)", class: "form-label" %>
    <%= f.text_field :normalized_merchant, class: "form-control", placeholder: "Ex: UBER" %>
  </div>

  <div class="mb-3">
    <%= f.label :category_id, "Categoria", class: "form-label" %>
    <%= f.collection_select :category_id, @categories, :id, :name,
          { prompt: "Selecione uma categoria" },
          class: "form-select" %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :confidence, "ConfianÃ§a", class: "form-label" %>
      <%= f.number_field :confidence, step: 0.01, min: 0, max: 1, class: "form-control" %>
    </div>

    <div class="col-md-6 mb-3">
      <%= f.label :source, "Origem", class: "form-label" %>
      <%= f.select :source, MerchantAlias.sources.keys.map { |k| [k.humanize, k] },
            {}, class: "form-select" %>
    </div>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "Salvar", class: "btn btn-primary" %>
    <%= link_to "Cancelar", merchant_aliases_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
