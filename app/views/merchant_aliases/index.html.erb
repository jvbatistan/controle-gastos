<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Aliases de comerciantes</h3>

    <%= link_to "➕ Novo alias", new_merchant_alias_path, class: "btn btn-primary" %>
  </div>

  <div class="card shadow-sm">
    <div class="table-responsive">
      <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
          <tr>
            <th>Comerciante</th>
            <th>Categoria</th>
            <th class="text-center">Confiança</th>
            <th class="text-end" style="width: 180px;">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @merchant_aliases.each do |ma| %>
            <tr>
              <td class="fw-semibold"><%= ma.normalized_merchant %></td>
              <td><%= ma.category.name %></td>
              <td class="text-center">
                <span class="badge bg-secondary">
                  <%= number_to_percentage(ma.confidence * 100, precision: 0) %>
                </span>
              </td>
              <td class="text-end">
                <%= link_to "Editar", edit_merchant_alias_path(ma), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Excluir", merchant_alias_path(ma),
                      method: :delete,
                      data: { confirm: "Tem certeza?" },
                      class: "btn btn-sm btn-outline-danger" %>
              </td>
            </tr>
          <% end %>

          <% if @merchant_aliases.empty? %>
            <tr>
              <td colspan="4" class="text-center text-muted py-4">
                Nenhum alias cadastrado.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
